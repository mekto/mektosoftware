@import url('http://fonts.googleapis.com/css?family=Antic+Slab');

@import "-prefix-free.styl"

base-size = 18px
base-line-height = 32px
base-color = #222

ms(increment)
  return base-size * (1.618 ** increment)

lh(font-size)
  return ceil(font-size / base-line-height) * base-line-height

*
  box-sizing: border-box

html
  font-size: 62.5%
body
  color: base-color
  font-family: Georgia, serif
  font-size: base-size
  line-height: base-line-height
  // background: url('http://twitter.github.com/bootstrap/assets/img/grid-18px-masked.png') repeat-x;
  // background-image: -webkit-linear-gradient(rgba(#eee,.2) 2px, transparent 2px), -webkit-linear-gradient(0, rgba(#eee,.1) 2px, transparent 2px), -webkit-linear-gradient(rgba(#eee,.3) 1px, transparent 1px), -webkit-linear-gradient(0, rgba(#eee,.3) 1px, transparent 1px)
  // background-size: 160px 160px, 160px 160px, 16px 16px, 16px 16px
  // background-position: -2px -2px, -2px -2px, -1px -1px, -1px -1px;

a
  &:hover
    background-color: #ffa
  &:visited
    color: @color
  &:focus
    border-color: #f33
  border-bottom: 1px dotted
  color: base-color
  line-height: inherit
  text-decoration: none
  transition: background-color .15s ease-in

time
  color: #555
  font-size: 14px
  font-style: italic

p.back
  a
    border-bottom: 0 none
  font-size: 13px
  font-style: italic


html, body, div, p, pre, h1, h2, h3, ul, ol
  font-size: base-font-size
  margin: 0
  padding: 0
  vertical-align: baseline
p
  font-size: base-font-size
  line-height: base-line-height
  margin-bottom: base-line-height
pre
  line-height: base-line-height
  margin-bottom: base-line-height
ul, ol
  margin-bottom: base-line-height
  margin-left: base-line-height
h1, h2, h3
  small
    color: #888
    font-size: 60%
    line-height: 0
  margin-bottom: base-line-height
  margin-top: base-line-height
  text-rendering: optimizeLegibility
code
  pre > &
    display: block
    padding: 0 7px
  display: inline-block
  background-color: #fafafa
  font-family: Monaco, Consolas, 'Courier New', monospace
  font-size: 16px
  padding: 0 3px

h1
  & + p
    margin-bottom: 1 * base-line-height
  font-size: ms(2)
  line-height: lh(@font-size)
  font-weight: normal
  margin-bottom: 0 * base-line-height
  margin-top: 1 * base-line-height
h2
  font-size: ms(1)
  line-height: lh(@font-size)
  margin-bottom: base-line-height

.container
  margin: 0 auto
  padding: 0
  max-width: 650px

#brand
  span
    color: #333
  @extends .container
  color: #aaa
  font-family: 'Courier New', courier, monospace
  font-size: ms(1)
  font-weight: normal
  line-height: lh(@font-size)
  margin-top: 1.5 * base-line-height
  text-align: center

#intro
  p:last-child
    margin-bottom: 0
  u
    color: #888
    font-weight: normal
    text-decoration: none
  @extends .container
  border-top: 1px dotted #bbb
  border-bottom: @border-top
  font-size: 16px
  font-style: italic
  margin-top: 1.5 * base-line-height
  padding: 18px

#about
  p:last-child
    margin-bottom: 0
  border-top: 1px dotted #aaa
  font-size: 16px
  font-style: italic
  margin: (3 * base-line-height) 0 (2 * base-line-height)
  padding: 18px

.avatar
  background: #fff url('gfx/avatar.gif') no-repeat
  border: 1px solid 000
  border-radius: 100px
  box-shadow: inset 0 0 5px 2px rgba(#000, .5)
  float: left;
  height: 96px
  margin-right: base-line-height
  width: 96px

#post-list
  p
    margin-bottom: 0
    margin-left: 128px + 18px
  a
    border-bottom: 0 none
  small
    color: #999
    font-size: 60%
    font-style: italic
    float: left
    width: 108px
    margin-left: (-@width)
  @extends .container
  margin: 1.5 * base-line-height auto

@import "codehilite.styl"